@{
    var person = ViewBag.person;
}
<div id="form">
    <form action="/Person/Register" method="post" id="form_add_alt_del">
        <div>
            <input type="hidden" id="id" name="id" value="@person.Id" />
            <input type="text" id="codigo" name="codigo" maxlength="5" placeholder="&#127380 | Codigo" value="@person.Codigo" ng-model="SCode"/>
        </div>
        <div>
            <input type="text" id="nome" name="nome" maxlength="25" required placeholder="&#128100 | Nome" value="@person.Nome" ng-model="SName"/>
        </div>
        <div>
            <input type="text" id="cpf" name="cpf" maxlength="11" required placeholder="&#128278 | CPF" value="@person.Cpf" ng-model="SCPF"/>
        </div>
        <div>
            <input type="text" id="endereço" name="endereço" maxlength="35" placeholder="&#128237 | Endereço" value="@person.Endereço" ng-model="SEnd"/>
        </div>
        <div>
            <input type="text" id="telefone" name="telefone" maxlength="9" placeholder="&#128222 | Telefone" value="@person.Telefone" ng-model="STel"/>
        </div>
        <button id="btn_alt" class="btn" >Salvar</button>
    </form>
</div>

